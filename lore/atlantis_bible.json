    "interpretation_lenses": [
      {
        "lens_id": "L_PHILOSOPHICAL",
        "name": "Moral Allegory",
        "thesis": "Atlantis versus Athens as virtue versus imperial appetite. The city collapses when restraint loses to expansion and the earth refuses to carry the weight.",
        "in_world_agents": [
          "academies",
          "civic philosophers",
          "ethics councils"
        ],
        "plot_uses": [
          "propaganda wars",
          "state legitimacy battles",
          "trial arcs"
        ],
        "evidence": [
          "Concentric city geometry treated as moral architecture",
          "Canal grid read as domination over nature",
          "Orichalcum law tablets reframed as ethical covenant"
        ],
        "failure_mode": "Turns complex causes into moral punishment and weaponizes virtue as censorship."
      },
      {
        "lens_id": "L_SKEPTICAL_ACADEMIC",
        "name": "Records Silence",
        "thesis": "If Atlantis was materially real at that scale, it should appear in trade, ecology, maps, and strata. The absence is the argument, so the myth is treated as constructed or miscopied.",
        "in_world_agents": [
          "historians",
          "archivists",
          "cartographers"
        ],
        "plot_uses": [
          "forensic lore hunts",
          "debunking as cover up",
          "evidence wars"
        ],
        "evidence": [
          "Missing corroboration outside canonical texts",
          "Reclassification of anomalies as hoaxes or misidentifications",
          "Map traditions that erase blank zones as non places"
        ],
        "failure_mode": "Confuses lack of access with lack of existence, then calls it rigor."
      },
      {
        "lens_id": "L_NEOPLATONIC",
        "name": "Mind vs Matter",
        "thesis": "Atlantis is simultaneously historical and symbolic, a recurring metaphysical conflict where consciousness and structure co create reality. The city is a resonant machine, not just a ruin.",
        "in_world_agents": [
          "mystics",
          "veil interpreters",
          "dream mathematicians"
        ],
        "plot_uses": [
          "metaphysical duels",
          "ritual philosophy",
          "inner war made physical"
        ],
        "evidence": [
          "Geometry that behaves like an interface, not decoration",
          "Orichalcum behaving as mind responsive substrate",
          "Reality shifts localized to ritual circuits and grid nodes"
        ],
        "failure_mode": "Over reads patterns until it starts manufacturing destiny."
      }
    ],
